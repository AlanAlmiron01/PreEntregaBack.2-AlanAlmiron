<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Real-Time Products</title>
  <link rel="stylesheet" href="/style.css">
  <script src="/socket.io/socket.io.js"></script>
</head>
<body>
  <header>
    <h1>Real-Time Products</h1>
    <nav>
      <a href="/">Home</a>
      <a href="/products/real">Products</a>
      <a href="/cart">Cart</a>
    </nav>
  </header>
  <main>
    <section>
      <h2>Create a Product</h2>
      <form id="productForm">
        <input type="text" name="title" placeholder="Title" required>
        <input type="text" name="category" placeholder="Category" value="Default Category">
        <input type="url" name="thumbnail" placeholder="Thumbnail URL" value="https://via.placeholder.com/150">
        <input type="number" name="price" placeholder="Price" value="1">
        <input type="number" name="stock" placeholder="Stock" value="1">
        <textarea name="description" placeholder="Description" required></textarea>
        <button type="submit">Create Product</button>
      </form>
    </section>
    <section>
      <h2>Products List</h2>
      <div id="productsList">
        <% products.forEach(product => { %>
          <div class="product-card">
            <img src="<%= product.thumbnails[0] %>" alt="<%= product.title %>">
            <h3><a href="/products/<%= product._id %>"><%= product.title %></a></h3>
            <p>Price: $<%= product.price %></p>
            <p>Stock: <%= product.stock %></p>
          </div>
        <% }); %>
      </div>
    </section>
  </main>
  <script src="/realTime.js"></script>
</body>
</html>
